<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tablayout"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/search"
            android:src="@drawable/search"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.flyco.tablayout.SegmentTabLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/tabs"
            app:tl_tab_space_equal="true"
            app:tl_tab_padding="25dp"
            app:tl_textsize="20sp"
            app:tl_textUnselectColor="@color/color_cd3e3a"
            app:tl_textSelectColor="@color/color_white"
            app:tl_indicator_color="@color/color_cd3e3a"
            app:tl_indicator_corner_radius="0dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <ImageButton
            android:id="@+id/message"
            android:src="@drawable/message"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/travel_top_tabs"
        android:layout_below="@id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>